{
  "name": "cruxnation/backend",
  "description": "Cruxnation.com backend implementation",
  "homepage": "https://cruxnation.com",
  "type": "project",
  "license": ["AGPL-3.0-or-later"],
  "readme": "README.md",
  "authors": [
    {
      "name": "Václav Pelíšek",
      "email": "peldax@gmail.com",
      "homepage": "https://www.peldax.com/"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "ext-redis": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",

    "bref/bref":                 "^2.0",
    "bref/extra-php-extensions": "^1.1.0",
    "aws/aws-sdk-php":           "^3.222",

    "firebase/php-jwt":   "^6.0",
    "nette/application":  "^3.1",
    "nette/bootstrap":    "^3.1",
    "nette/database":     "^3.1.5",
    "nette/di":           "^3.0",
    "nette/robot-loader": "^3.3",
    "nette/security":     "^3.1",
    "nette/caching":      "^3.1.2",
    "nette/utils":        "^3.2",
    "nette/mail":         "^3.1",
    "latte/latte":        "^3.0",
    "tracy/tracy":        "^2.9",

    "contributte/console":        "^0.9",
    "contributte/guzzlette":      "^3.3",
    "kdyby/redis":                "^6.1",

    "infinityloop-dev/coolbeans": "^0.11.2",

    "infinityloop-dev/graphpinator":                       "^1.4",
    "infinityloop-dev/graphpinator-extra-types":           "^1.5",
    "infinityloop-dev/graphpinator-constraint-directives": "^1.3",
    "infinityloop-dev/graphpinator-where-directives":      "^1.0",
    "infinityloop-dev/graphpinator-query-cost":            "^1.1",
    "infinityloop-dev/graphpinator-persisted-queries":     "^1.2",
    "infinityloop-dev/graphpinator-nette":                 "^1.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit": "^10.0",
    "infection/infection": "^0.26",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-nette": "^1.2",
    "phpstan/phpstan-phpunit": "^1.3",
    "phpstan/phpstan-strict-rules": "^1.4",
    "phpstan/extension-installer": "^1.1.0"
  },
  "scripts": {
    "generate-sql": "php bin/console.php sqlGenerator ./../app/Storage/Bean ./../build/database-build.sql",
    "phpunit": "phpunit tests --testdox --exclude ci-skip",
    "phpunit-all": "phpunit tests --testdox",
    "phpstan": "phpstan analyze --level 6 app",
    "phpstan-next": "phpstan analyze --level 7 app",
    "phpstan-max": "phpstan analyze --level max app",
    "infection": [
      "Composer\\Config::disableProcessTimeout",
      "infection -j$(nproc)"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "discard-changes": true,
    "classmap-authoritative": true,
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "infection/extension-installer": true
    }
  }
}
